<!-- customer_support_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/darkwhite1_upper_border_rounded"
    android:orientation="vertical"
    android:padding="15dp">

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/imgClose"
       android:src="@drawable/baseline_close_24"
       android:layout_gravity="end"
       android:layout_marginBottom="15dp"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Top 3 activities"
       style="@style/rubik_medium_black_12"
       android:padding="5dp"
       android:layout_marginBottom="10dp"
       />

   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:id="@+id/recyclerHorizontal"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       tools:text="Top 3 activities"
       android:id="@+id/txtmore"
       style="@style/rubik_medium_darkgreen_12"
       android:padding="5dp"
       android:layout_marginTop="10dp"
       android:layout_gravity="end"
       android:layout_marginBottom="10dp"
       />

</LinearLayout>
